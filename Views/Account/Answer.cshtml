@model SunStack.ViewModel.AnswerModel
@{
    ViewBag.Title = "Answer";
}

<div>

    @using (Html.BeginForm("SaveAnswer", "Account"))
    {
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <h2>
            <label for="Answer">Answer Here</label>
        </h2>
        <br />
        <div class="row">
            <div class="col-lg-10">@Html.TextAreaFor(a => a.Answer1, new { @class = "form-control" })</div>
        </div><br />

        <input type="submit" value="Submit" class="btn btn-primary" />
    }
</div>

