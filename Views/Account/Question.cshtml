@model SunStack.ViewModel.QuestionModel
@{
    ViewBag.Title = "Question";
}
    <div>

        @using (Html.BeginForm("SaveQuestion", "Account"))
        {
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <h2>
            <label for="Question">Ask Your Question Here</label>
        </h2>
        <br />
        <div class="row">
            <div class="col-lg-10">@Html.TextAreaFor(a => a.Question1, new { @class = "form-control" })</div>
        </div><br />

        <input type="submit" value="Submit" class="btn btn-primary" />
        }
    </div>
